APP_NAME="KV SaaS ERP/CRM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=kv_saas_erp
DB_USERNAME=root
DB_PASSWORD=

# Multi-Tenancy Configuration
TENANCY_ENABLED=true
TENANCY_DATABASE_PREFIX=tenant_
TENANCY_STORAGE_PREFIX=tenant-

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=kv_erp_

# Redis Configuration
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem Configuration
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=redis

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=60

# Security
CORS_ALLOWED_ORIGINS=*
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Module Configuration
MODULES_NAMESPACE=Modules
MODULES_PATH=Modules
MODULES_GENERATE_OPTIMIZED_LOADER=false
MODULES_AUTO_DISCOVER=true
MODULES_CACHE_ENABLED=true
MODULES_CACHE_TTL=86400

# JWT Authentication (Stateless)
JWT_SECRET=
JWT_TTL=3600
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=30
JWT_PROVIDERS_JWT=Tymon\JWTAuth\Providers\LaravelServiceProvider
JWT_SHOW_BLACK_LIST_EXCEPTION=true

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_EXPIRY_DAYS=90
MFA_ENABLED=false
MFA_ISSUER="${APP_NAME}"
SESSION_ABSOLUTE_TIMEOUT=14400
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=15

# Pricing Engine Configuration
PRICING_DEFAULT_TYPE=flat
PRICING_ALLOW_DYNAMIC=true
PRICING_CACHE_ENABLED=true
PRICING_CACHE_TTL=3600
PRICING_LOCATION_BASED=true
PRICING_CUSTOMER_SPECIFIC=true
PRICING_VOLUME_DISCOUNTS=true
PRICING_TIERED_ENABLED=true
PRICING_RULES_ENGINE=dynamic

# Product Configuration
PRODUCT_DEFAULT_TYPE=product
PRODUCT_ALLOW_COMBO=true
PRODUCT_ALLOW_VARIABLE_UNITS=true
PRODUCT_DIFFERENT_BUY_SELL_UNITS=true
PRODUCT_TRACK_SERIAL_NUMBERS=true
PRODUCT_TRACK_LOT_NUMBERS=true
PRODUCT_ENABLE_VARIANTS=true
PRODUCT_AUTO_SKU=true

# Inventory Configuration
INVENTORY_COSTING_METHOD=fifo
INVENTORY_NEGATIVE_STOCK_ALLOWED=false
INVENTORY_AUTO_REPLENISH=true
INVENTORY_REORDER_POINT_ENABLED=true
INVENTORY_ABC_ANALYSIS=true
INVENTORY_CYCLE_COUNT_ENABLED=true

# Organization Hierarchy Configuration
ORG_MAX_DEPTH=10
ORG_MIN_DEPTH=1
ORG_CACHE_ENABLED=true
ORG_CACHE_TTL=3600
ORG_AUTO_INHERIT_SETTINGS=true
ORG_CROSS_ORG_TRANSACTIONS=true
ORG_DEFAULT_TYPE=branch

# Multi-Currency Configuration
CURRENCY_AUTO_UPDATE_RATES=true
CURRENCY_UPDATE_FREQUENCY=daily
CURRENCY_PROVIDER=exchangerate-api
CURRENCY_API_KEY=
CURRENCY_BASE=USD
CURRENCY_DECIMAL_PLACES=2
CURRENCY_CACHE_TTL=86400

# Multi-Language Configuration
LOCALE_AUTO_DETECT=true
LOCALE_FALLBACK_CHAIN=true
LOCALE_CACHE_TRANSLATIONS=true
LOCALE_AVAILABLE="en,es,fr,de,zh,ja,ar"
LOCALE_RTL_LANGUAGES="ar,he,fa"

# Audit Logging Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_INCLUDE_SYSTEM_ACTIONS=true
AUDIT_LOG_TRACK_IP=true
AUDIT_LOG_TRACK_USER_AGENT=true
AUDIT_LOG_ASYNC=true
AUDIT_LOG_QUEUE=audit

# Performance & Optimization
CACHE_QUERY_RESULTS=true
CACHE_QUERY_TTL=300
EAGER_LOAD_RELATIONSHIPS=true
PAGINATION_DEFAULT_SIZE=15
PAGINATION_MAX_SIZE=100
API_RESPONSE_CACHE=true
API_RESPONSE_CACHE_TTL=60

# Concurrency Configuration
DB_LOCK_TIMEOUT=30
DB_DEADLOCK_RETRY=3
DB_PESSIMISTIC_LOCKING=true
DISTRIBUTED_LOCK_DRIVER=redis
DISTRIBUTED_LOCK_TTL=30

# Workflow Configuration
WORKFLOW_AUTO_APPROVAL=false
WORKFLOW_APPROVAL_LEVELS=3
WORKFLOW_EMAIL_NOTIFICATIONS=true
WORKFLOW_PARALLEL_APPROVALS=false

# Reporting Configuration
REPORT_CACHE_ENABLED=true
REPORT_CACHE_TTL=1800
REPORT_EXPORT_FORMATS="pdf,xlsx,csv"
REPORT_MAX_ROWS=10000
REPORT_ASYNC_GENERATION=true

# Integration Configuration
WEBHOOK_ENABLED=true
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=30
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_DASHBOARD=true
FEATURE_MOBILE_APP=false
FEATURE_VOICE_COMMANDS=false
FEATURE_AI_ASSISTANT=false
FEATURE_BLOCKCHAIN_AUDIT=false
